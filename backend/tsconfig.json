{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}